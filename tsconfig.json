{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "sourceMap": true,
    "strict":false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "outDir": "./dist/",
    "paths": {
      "~/*": ["./*"]
    },
    // "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "./playground/"
  ],
  "include": ["./**/*"]
}
